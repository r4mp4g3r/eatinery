{
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist",
        "buildCommand": "npm --prefix client run build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "/api/(.*)", "dest": "/api/index.ts" },

    { "src": "/(.*)", "dest": "/client/dist/index.html" }
  ]
}
